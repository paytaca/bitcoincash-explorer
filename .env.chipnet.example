CHAIN=chipnet

# Bitcoin Cash Node JSON-RPC
BCH_RPC_URL=http://127.0.0.1:18332/
BCH_RPC_USER=rpcuser
BCH_RPC_PASS=rpcpass

# BCHN ZMQ (for real-time updates)
BCH_ZMQ_HOST=127.0.0.1
BCH_ZMQ_PORT=28332

# Redis cache
REDIS_URL=redis://127.0.0.1:6379/0

# BCMR Indexer
BCMR_BASE_URL=https://bcmr.paytaca.com

# Fulcrum (Electrum server)
FULCRUM_HOST=127.0.0.1
FULCRUM_PORT=60002
FULCRUM_TIMEOUT_MS=10000

# Deployment (Fabric)
SERVER_USER=root
SERVER_HOSTNAME=example.com
SERVER_PATH=/root/bitcoincash-explorer
SERVER_DOCKER_COMPOSE_FILE=docker-compose.yml
SERVER_DOCKER_COMPOSE_PROJECT=bitcoincash_explorer